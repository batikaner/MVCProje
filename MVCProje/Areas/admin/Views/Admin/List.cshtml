@using MVCProje.Models
@model IEnumerable<User>
@{
    ViewBag.Title = "List";
}

<h2>Welcome Back  @Session["admin"] !</h2>


<table align="center" class="table table-striped table-striped">
    <thead>
        <tr>
            <th>Processes</th>
            <th>Username</th>
            <th>Role</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td><a href="/admin/Admin/Delete/@item.UserId" class="btn btn-danger" onclick="return confirm('Seçili Kullanıcı Silinsin Mi?')">Sil</a></td>

                <td> @item.Username</td>
                <td>
                    @if (item.role == 1)
                    {
                        <strong>  <p style="color:red;">Admin</p></strong>
                    }
                    else
                    {
                        <p>User</p>
                    }
                </td>

            </tr>
        }


    </tbody>


</table>

<br />

<div class="form-group">
    <label style="margin-left:auto;margin-right:auto">Yorum ekleme kapalıdır</label>
    <textarea name="txtComment" id="editor1" class="form-control" style="margin-left:auto;margin-right:auto"></textarea>
</div>


@section scripts {


    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
    var editor = CKEDITOR.instances['editor1'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('editor1', {
    enterMode: CKEDITOR.ENTER_BR,
    });
    CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
    </script>
   

}